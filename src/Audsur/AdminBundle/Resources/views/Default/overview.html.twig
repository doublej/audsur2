{% extends "::adminbase.html.twig" %}
{% block title %} Admin | Index {% endblock %}
{% block body %}
	<h2>Overzicht</h2>
	<table>
		<th>
			<tr>
				<td>id</td>
				<td>categorie</td>
				<td>merk</td>
				<td>type</td>
				<td>omschrijving</td>
			</tr>
		</th>
	{% for product in products[(paginatorIndex * 10):10]%}
		<tr>
			<td>{{ product.id }}</td>
			<td>{{ product.brand.name }}</td>
			<td>{{ product.name }}</td>
			<td>
				<a href="{{ path('admin_product_edit', {'id': product.id} ) }}">wijzig</a>
			</td>
			<td>
				<a href="{{ path('admin_product_delete', {'id': product.id} ) }}">verwijder</a>
			</td>
		</tr>
	{% endfor %}
	</table>

{% endblock %}


